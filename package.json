{
  "name": "context-bridge",
  "version": "1.0.0",
  "description": "AI-powered cross-platform memory integration for Pulse AI personal COO",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run client:dev\"",
    "dev:server": "npm run server:dev",
    "dev:client": "npm run client:dev",
    "build": "npm run clean && npm run server:build && npm run client:build",
    "build:prod": "npm run server:build && npm run client:build",
    "build:vercel": "npm run build:prod",
    "server:dev": "nodemon --watch src/server --ignore dist --ignore node_modules --exec tsx src/server/index.ts",
    "server:build": "tsc -p src/server/tsconfig.json --incremental",
    "client:dev": "vite --host localhost",
    "client:build": "vite build --outDir dist/client",
    "client:build:vercel": "tsc -p src/client/tsconfig.json && vite build --outDir ../../dist/client",
    "client:preview": "vite preview",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache",
    "type-check": "tsc --noEmit --incremental",
    "clean": "npx rimraf dist *.tsbuildinfo node_modules/.tmp || echo 'Clean completed'",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "npm run build && netlify deploy --prod --dir=dist/client",
    "deploy:railway": "railway up",
    "deploy:render": "npm run build && npm start",
    "start:prod": "cross-env NODE_ENV=production node dist/server/index.js",
    "docker:build": "docker build -t context-bridge .",
    "docker:run": "docker run -p 3000:3000 -p 5000:5000 context-bridge",
    "docker:compose": "docker-compose up --build"
  },
  "keywords": ["ai", "context", "memory", "pulse", "coo", "typescript"],
  "author": "Pulse AI Intern Candidate",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0",
    "uuid": "^9.0.1",
    "date-fns": "^2.30.0",
    "rimraf": "^5.0.5",
    "@vercel/node": "^3.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "terser": "^5.24.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.0",
    "pm2": "^5.3.0"
  }
}